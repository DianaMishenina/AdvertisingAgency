<Window x:Class="AdvertisingAgency.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdvertisingAgency"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="250"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="1" VerticalAlignment="Center">
            <TextBlock Text="Логин:" Margin="0,0,0,10"/>
            <TextBox x:Name="tbLogin" Margin="0,0,0,10"/>
            <TextBlock Text="Пароль:" Margin="0,0,0,10"/>
            <TextBox x:Name="tbPassword" Margin="0,0,0,20"/>
            <Button x:Name="btnEnter" Content="Войти" Width="100" Height="30" Margin="0,0,0,20" Click="btnEnter_Click"/>
            <Button x:Name="btnReg" Content="Зарегистрироваться" Width="160" Height="30" Click="btnReg_Click"/>
        </StackPanel>
    </Grid>
</Window>
